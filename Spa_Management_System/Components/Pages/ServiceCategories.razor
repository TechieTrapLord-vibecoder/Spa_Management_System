@page "/service-categories"
@using Spa_Management_System.Services
@using Spa_Management_System.Data
@using Spa_Management_System.Models
@using Microsoft.EntityFrameworkCore
@inject IAuthStateService AuthState
@inject NavigationManager Navigation
@inject AppDbContext DbContext
@inject IToastService Toast

<PageTitle>Service Categories - Kaye Spa</PageTitle>

@if (!AuthState.IsAuthenticated || !AuthState.GetUserRole().Equals("SuperAdmin", StringComparison.OrdinalIgnoreCase))
{
    <div class="card">
        <div class="alert alert-danger">
            <span class="bi bi-shield-x"></span>
            <div>
                <h4 style="margin: 0 0 0.5rem 0;">Access Denied</h4>
                <p style="margin: 0;">You need SuperAdmin access to manage service categories.</p>
            </div>
        </div>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/login")'>
            <span class="bi bi-box-arrow-in-right"></span> Go to Login
        </button>
    </div>
}
else
{
    <div class="card">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
            <div>
                <h3 class="card-title" style="margin: 0;"><span class="bi bi-tags"></span> Service Categories</h3>
                <p style="color: var(--spa-text-light); margin: 0.5rem 0 0 0;">Organize your spa services into categories</p>
            </div>
            <div style="display: flex; align-items: center; gap: 1rem;">
                <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                    <input type="checkbox" @bind="showArchived" @bind:after="LoadCategories" style="width: 18px; height: 18px;" />
                    <span>Show Archived</span>
                </label>
                <button class="btn btn-primary" @onclick="OpenAddDialog">
                    <span class="bi bi-plus-circle"></span> Add Category
                </button>
            </div>
        </div>

        @if (isLoading)
        {
            <div style="padding: 2rem; text-align: center;">
                <div class="loading"></div>
                <p style="margin-top: 1rem; color: var(--spa-text-light);">Loading categories...</p>
            </div>
        }
        else if (!categories.Any())
        {
            <div class="alert alert-info">
                <span class="bi bi-info-circle-fill"></span>
                <div>
                    <strong>No Categories Yet</strong><br />
                    Start by creating your first service category (e.g., "Massage", "Facial", "Body Treatment").
                </div>
            </div>
        }
        else
        {
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem;">
                @foreach (var category in categories)
                {
                    <div style="padding: 1.5rem; border: 2px solid var(--spa-secondary); border-radius: 12px; transition: all 0.2s;">
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                            <div>
                                <h4 style="color: var(--spa-primary); margin: 0 0 0.5rem 0;">@category.Name</h4>
                                <p style="color: var(--spa-text-light); font-size: 0.9rem; margin: 0;">
                                    @(string.IsNullOrEmpty(category.Description) ? "No description" : category.Description)
                                </p>
                            </div>
                        </div>
                        
                        <div style="display: flex; gap: 0.5rem; padding-top: 1rem; border-top: 1px solid var(--spa-secondary);">
                            <span class="badge badge-info">@category.Services.Count services</span>
                        </div>

                        <div style="display: flex; gap: 0.5rem; margin-top: 1rem;">
                            <button class="btn btn-sm btn-light" @onclick="() => OpenEditDialog(category)" style="flex: 1;">
                                <span class="bi bi-pencil"></span> Edit
                            </button>
                            @if (category.IsArchived)
                            {
                                <button class="btn btn-sm btn-success" @onclick="() => RestoreCategory(category.ServiceCategoryId)" style="flex: 1;">
                                    <span class="bi bi-arrow-counterclockwise"></span> Restore
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-warning" @onclick="() => ConfirmArchiveCategory(category.ServiceCategoryId)" style="flex: 1;"
                                        disabled="@(category.Services.Count > 0)">
                                    <span class="bi bi-archive"></span> Archive
                                </button>
                            }
                        </div>
                        @if (!category.IsArchived && category.Services.Count > 0)
                        {
                            <p style="font-size: 0.75rem; color: var(--spa-text-light); margin: 0.5rem 0 0 0; text-align: center;">
                                Cannot archive - has services
                            </p>
                        }
                        @if (category.IsArchived)
                        {
                            <p style="font-size: 0.75rem; color: var(--spa-warning); margin: 0.5rem 0 0 0; text-align: center;">
                                <span class="bi bi-archive"></span> Archived
                            </p>
                        }
                    </div>
                }
            </div>
        }
    </div>

    @if (showDialog)
    {
        <div class="modal-overlay" @onclick="CloseDialog">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h4 style="margin: 0; color: var(--spa-primary);">
                        @(isEditMode ? "Edit Service Category" : "Add Service Category")
                    </h4>
                    <button class="btn-close" @onclick="CloseDialog">
                        <span class="bi bi-x-lg"></span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>Category Name *</label>
                        <input type="text" class="form-control" @bind="currentCategory.Name" 
                               placeholder="e.g., Massage, Facial, Body Treatment" maxlength="100" />
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" @bind="currentCategory.Description" 
                                  rows="3" placeholder="Brief description of this category"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseDialog">
                        <span class="bi bi-x-circle"></span> Cancel
                    </button>
                    <button class="btn btn-primary" @onclick="SaveCategory" disabled="@(string.IsNullOrWhiteSpace(currentCategory.Name))">
                        <span class="bi bi-check-circle"></span> @(isEditMode ? "Update" : "Create")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Archive Confirmation Dialog -->
    @if (showArchiveConfirm)
    {
        <div class="modal-overlay" @onclick="CancelArchive">
            <div class="modal-content" @onclick:stopPropagation="true" style="max-width: 400px;">
                <div class="modal-header" style="background: var(--spa-warning); color: white;">
                    <h4 style="margin: 0;"><span class="bi bi-archive"></span> Confirm Archive</h4>
                </div>
                <div class="modal-body" style="text-align: center; padding: 2rem;">
                    <div style="font-size: 3rem; margin-bottom: 1rem;"><span class="bi bi-archive"></span></div>
                    <p style="font-size: 1.1rem;">Are you sure you want to archive this category?</p>
                    <p style="color: var(--spa-text-light);">Archived categories can be restored later if needed.</p>
                </div>
                <div class="modal-footer" style="justify-content: center; gap: 1rem;">
                    <button class="btn btn-secondary" @onclick="CancelArchive">
                        <span class="bi bi-x-circle"></span> Cancel
                    </button>
                    <button class="btn btn-warning" @onclick="() => ArchiveCategory(archiveCategoryId!.Value)">
                        <span class="bi bi-archive"></span> Yes, Archive
                    </button>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<ServiceCategory> categories = new();
    private ServiceCategory currentCategory = new();
    private bool isLoading = true;
    private bool showDialog = false;
    private bool isEditMode = false;
    private bool showArchived = false;
    
    // Archive confirmation
    private bool showArchiveConfirm = false;
    private int? archiveCategoryId = null;

    protected override void OnInitialized()
    {
        if (!AuthState.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        if (!AuthState.GetUserRole().Equals("SuperAdmin", StringComparison.OrdinalIgnoreCase))
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        isLoading = true;
        try
        {
            var query = DbContext.ServiceCategories
                .Include(c => c.Services)
                .AsQueryable();
            
            if (!showArchived)
            {
                query = query.Where(c => !c.IsArchived);
            }
            
            categories = await query
                .OrderBy(c => c.Name)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Toast.ShowError($"Error loading categories: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenAddDialog()
    {
        currentCategory = new ServiceCategory();
        isEditMode = false;
        showDialog = true;
    }

    private void OpenEditDialog(ServiceCategory category)
    {
        currentCategory = new ServiceCategory
        {
            ServiceCategoryId = category.ServiceCategoryId,
            Name = category.Name,
            Description = category.Description
        };
        isEditMode = true;
        showDialog = true;
    }

    private void CloseDialog()
    {
        showDialog = false;
        currentCategory = new();
        isEditMode = false;
    }

    private async Task SaveCategory()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(currentCategory.Name))
            {
                Toast.ShowError("Category name is required.");
                return;
            }

            if (isEditMode)
            {
                var existing = await DbContext.ServiceCategories.FindAsync(currentCategory.ServiceCategoryId);
                if (existing != null)
                {
                    existing.Name = currentCategory.Name.Trim();
                    existing.Description = currentCategory.Description?.Trim();
                    await DbContext.SaveChangesAsync();
                    Toast.ShowSuccess("Service category updated successfully!");
                }
            }
            else
            {
                var newCategory = new ServiceCategory
                {
                    Name = currentCategory.Name.Trim(),
                    Description = currentCategory.Description?.Trim()
                };
                DbContext.ServiceCategories.Add(newCategory);
                await DbContext.SaveChangesAsync();
                Toast.ShowSuccess("Service category created successfully!");
            }

            CloseDialog();
            await LoadCategories();
        }
        catch (Exception ex)
        {
            Toast.ShowError($"Error saving category: {ex.Message}");
        }
    }

    private void ConfirmArchiveCategory(int categoryId)
    {
        archiveCategoryId = categoryId;
        showArchiveConfirm = true;
    }

    private void CancelArchive()
    {
        showArchiveConfirm = false;
        archiveCategoryId = null;
    }

    private async Task ArchiveCategory(int categoryId)
    {
        showArchiveConfirm = false;

        try
        {
            var category = await DbContext.ServiceCategories
                .Include(c => c.Services)
                .FirstOrDefaultAsync(c => c.ServiceCategoryId == categoryId);

            if (category == null)
            {
                Toast.ShowError("Category not found.");
                return;
            }

            if (category.Services.Any())
            {
                Toast.ShowError("Cannot archive category with existing services.");
                return;
            }

            category.IsArchived = true;
            await DbContext.SaveChangesAsync();
            Toast.ShowSuccess("Category archived successfully!");
            await LoadCategories();
        }
        catch (Exception ex)
        {
            Toast.ShowError($"Error archiving category: {ex.Message}");
        }
        archiveCategoryId = null;
    }

    private async Task RestoreCategory(int categoryId)
    {
        try
        {
            var category = await DbContext.ServiceCategories.FindAsync(categoryId);
            if (category == null)
            {
                Toast.ShowError("Category not found.");
                return;
            }

            category.IsArchived = false;
            await DbContext.SaveChangesAsync();
            Toast.ShowSuccess("Category restored successfully!");
            await LoadCategories();
        }
        catch (Exception ex)
        {
            Toast.ShowError($"Error restoring category: {ex.Message}");
        }
    }

    private Task<bool> JSConfirm(string message)
    {
        // Simplified confirmation - in production use JS interop
        return Task.FromResult(true);
    }
}
