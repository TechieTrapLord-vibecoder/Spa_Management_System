    private async Task LoadReports()
    {
        isLoading = true;
        try
        {
            var endDateEnd = endDate.AddDays(1);

            // ===== ACTUAL PAYMENTS RECEIVED (Source of Truth for Revenue) =====
            var payments = await DbContext.Payments
                .Include(p => p.Sale).ThenInclude(s => s!.SaleItems).ThenInclude(si => si.Service)
                .Include(p => p.Sale).ThenInclude(s => s!.SaleItems).ThenInclude(si => si.Product)
                .Where(p => p.PaidAt >= startDate && p.PaidAt < endDateEnd)
                .ToListAsync();

            // Total Revenue = Sum of all payments received (the actual cash/card/gcash collected)
            totalRevenue = payments.Sum(p => p.Amount);
            salesCount = payments.Count;

            // Get paid sales for breakdown
            var paidSaleIds = payments.Select(p => p.SaleId).Distinct().ToList();
            var paidSales = await DbContext.Sales
                .Include(s => s.SaleItems).ThenInclude(si => si.Service)
                .Include(s => s.SaleItems).ThenInclude(si => si.Product)
                .Where(s => paidSaleIds.Contains(s.SaleId))
                .ToListAsync();

            // VAT Collected = Sum of tax amounts from paid sales
            totalVatCollected = paidSales.Sum(s => s.TaxAmount);

            // Service Revenue = Sum of service items in paid sales
            serviceRevenue = paidSales
                .SelectMany(s => s.SaleItems.Where(si => si.ItemType == "service"))
                .Sum(si => si.LineTotal);

            // Product Revenue = Sum of product items in paid sales
            productRevenue = paidSales
                .SelectMany(s => s.SaleItems.Where(si => si.ItemType == "product"))
                .Sum(si => si.LineTotal);
            productsSold = (int)paidSales
                .SelectMany(s => s.SaleItems.Where(si => si.ItemType == "product"))
                .Sum(si => si.Qty);

            // Get PAID appointments only for commission calculation (commissions are earned when payment is received)
            var paidStatuses = new[] { "paid", "Paid" };
            var appointments = await DbContext.Appointments
                .Include(a => a.AppointmentServices).ThenInclude(asvc => asvc.Service)
                .Include(a => a.AppointmentServices).ThenInclude(asvc => asvc.TherapistEmployee).ThenInclude(e => e!.Person)
                .Where(a => a.ScheduledStart >= startDate && a.ScheduledStart < endDateEnd && paidStatuses.Contains(a.Status))
                .ToListAsync();

            completedAppointments = appointments.Count;

            // Get all sales for the table display (paid ones)
            recentSales = await DbContext.Sales
                .Include(s => s.Customer).ThenInclude(c => c!.Person)
                .Include(s => s.Payments)
                .Where(s => s.Payments.Any(p => p.PaidAt >= startDate && p.PaidAt < endDateEnd))
                .OrderByDescending(s => s.CreatedAt)
                .ToListAsync();

            // Commissions - calculate from completed appointments
            var employeeCommissions = await DbContext.EmployeeServiceCommissions.ToListAsync();

            totalCommissions = 0;
            var therapistIds = new HashSet<long>();
            
            foreach (var a in appointments)
            {
                foreach (var asvc in a.AppointmentServices ?? new List<Models.AppointmentService>())
                {
                    if (asvc.TherapistEmployeeId.HasValue)
                    {
                        therapistIds.Add(asvc.TherapistEmployeeId.Value);
                        var commConfig = employeeCommissions
                            .FirstOrDefault(ec => ec.EmployeeId == asvc.TherapistEmployeeId && ec.ServiceId == asvc.ServiceId);
                        var rate = commConfig?.CommissionType == "percent" ? commConfig.CommissionValue / 100m : 0.30m;
                        totalCommissions += asvc.Price * rate;
                    }
                }
            }
            therapistCount = therapistIds.Count;

            // Payment method breakdown (already have payments from above)
            paymentBreakdown = payments
                .GroupBy(p => p.PaymentMethod ?? "Cash")
                .Select(g => new PaymentMethodBreakdown { Method = g.Key, Amount = g.Sum(p => p.Amount), Count = g.Count() })
                .ToList();

            // Service breakdown from paid sales
            serviceBreakdown = paidSales
                .SelectMany(s => s.SaleItems.Where(si => si.ItemType == "service" && si.Service != null))
                .GroupBy(si => new { si.Service!.ServiceId, si.Service.Name, Category = si.Service.ServiceCategory?.Name ?? "Uncategorized" })
                .Select(g => new ServiceBreakdown 
                { 
                    ServiceName = g.Key.Name, 
                    Category = g.Key.Category,
                    Count = g.Count(),
                    Revenue = g.Sum(si => si.LineTotal)
                })
                .ToList();

            // Product breakdown from paid sales
            productBreakdown = paidSales
                .SelectMany(s => s.SaleItems.Where(si => si.ItemType == "product" && si.Product != null))
                .GroupBy(si => new { si.Product!.ProductId, si.Product.Name, si.Product.Sku })
                .Select(g => new ProductBreakdown
                {
                    ProductName = g.Key.Name,
                    SKU = g.Key.Sku ?? "",
                    QtySold = (int)g.Sum(si => si.Qty),
                    Revenue = g.Sum(si => si.LineTotal)
                })
                .ToList();

            // Therapist breakdown from paid sales with services
            var paidServiceItems = paidSales
                .SelectMany(s => s.SaleItems.Where(si => si.ItemType == "service" && si.TherapistEmployeeId.HasValue))
                .ToList();

            // Get therapist info
            var therapistIds2 = paidServiceItems.Where(si => si.TherapistEmployeeId.HasValue).Select(si => si.TherapistEmployeeId!.Value).Distinct().ToList();
            var therapists = await DbContext.Employees
                .Include(e => e.Person)
                .Where(e => therapistIds2.Contains(e.EmployeeId))
                .ToListAsync();

            therapistBreakdown = paidServiceItems
                .GroupBy(si => si.TherapistEmployeeId!.Value)
                .Select(g => {
                    var therapist = therapists.FirstOrDefault(t => t.EmployeeId == g.Key);
                    var svcRev = g.Sum(si => si.LineTotal);
                    var comm = g.Sum(si => {
                        var commConfig = employeeCommissions
                            .FirstOrDefault(ec => ec.EmployeeId == g.Key && ec.ServiceId == si.ServiceId);
                        var rate = commConfig?.CommissionType == "percent" ? commConfig.CommissionValue / 100m : 0.30m;
                        return si.LineTotal * rate;
                    });
                    return new TherapistBreakdown
                    {
                        Name = therapist != null ? $"{therapist.Person?.FirstName} {therapist.Person?.LastName}" : "Unknown",
                        ServiceCount = g.Count(),
                        ServiceRevenue = svcRev,
                        Commission = comm
                    };
                })
                .ToList();

            // Daily breakdown from payments
            dailyBreakdown = Enumerable.Range(0, (int)(endDate - startDate).TotalDays + 1)
                .Select(i => startDate.AddDays(i))
                .Select(date => 
                {
                    var dayPayments = payments.Where(p => p.PaidAt.Date == date).ToList();
                    var daySaleIds = dayPayments.Select(p => p.SaleId).ToList();
                    var daySales = paidSales.Where(s => daySaleIds.Contains(s.SaleId)).ToList();
                    var daySvcRev = daySales.SelectMany(s => s.SaleItems.Where(si => si.ItemType == "service")).Sum(si => si.LineTotal);
                    var dayProdRev = daySales.SelectMany(s => s.SaleItems.Where(si => si.ItemType == "product")).Sum(si => si.LineTotal);
                    return new DailyBreakdown
                    {
                        Date = date,
                        TransactionCount = dayPayments.Count,
                        ServiceRevenue = daySvcRev,
                        ProductRevenue = dayProdRev,
                        TotalRevenue = dayPayments.Sum(p => p.Amount)
                    };
                })
                .Where(d => d.TransactionCount > 0)
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading reports: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

